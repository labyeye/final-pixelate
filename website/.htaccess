# Apache .htaccess Configuration for Pixelate Nest
# Enable if using Apache server
# Last Updated: October 30, 2025

<IfModule mod_rewrite.c>
RewriteEngine On
RewriteBase /

# ============================================
# 301 REDIRECTS - Old URLs to New Structure
# Fix Google Search Console 404 Errors
# ============================================

# Old video editing page redirects
RewriteRule ^videoediting\.html$ /video-ed.html [R=301,L]
RewriteRule ^video-editing\.html$ /video-ed.html [R=301,L]

# Old app development page redirects
RewriteRule ^appdev\.html$ /app-dev.html [R=301,L]
RewriteRule ^app-development\.html$ /app-dev.html [R=301,L]

# Old blog page redirects
RewriteRule ^blog\.html$ /blogs.html [R=301,L]
RewriteRule ^blog\.htmls/(.*)$ /blogs.html [R=301,L]

# Old works/portfolio page (redirect to homepage or create works page)
RewriteRule ^works\.html$ /pricing.html [R=301,L]

# Old services page (redirect to homepage)
RewriteRule ^services\.html$ /webdev.html [R=301,L]
RewriteRule ^services/works\.html$ /pricing.html [R=301,L]
RewriteRule ^services/contact\.html$ /contact.html [R=301,L]
RewriteRule ^services/blog\.html$ /blogs.html [R=301,L]
RewriteRule ^services/(.*)$ /webdev.html [R=301,L]

# Old features page (redirect to about)
RewriteRule ^features\.html$ /about.html [R=301,L]

# Old team members pages (redirect to about)
RewriteRule ^team-members/(.*)$ /about.html [R=301,L]

# Old inner pages
RewriteRule ^inner-pages/career$ /careers.html [R=301,L]
RewriteRule ^inner-pages/(.*)$ / [R=301,L]

# Branding page redirect
RewriteRule ^services\.html/branding$ /webdev.html [R=301,L]

# Checkout page redirect (if doesn't exist)
RewriteRule ^checkout$ /contact.html [R=301,L]

# API endpoints - Return 410 Gone (better than 404 for SEO)
RewriteRule ^api/(.*)$ - [R=410,L]

# Old domain redirect (if applicable)
RewriteCond %{HTTP_HOST} ^na\.com$ [NC]
RewriteRule ^(.*)$ https://www.pixelatenest.com/$1 [R=301,L]

# Fix double slashes
RewriteCond %{THE_REQUEST} //
RewriteRule ^.*$ /$0 [R=301,L,NE]

# ============================================
# Force HTTPS
# ============================================

RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# ============================================
# Remove .html extensions (Clean URLs)
# ============================================

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([^\.]+)$ $1.html [NC,L]

</IfModule>

# Enable Gzip Compression
<IfModule mod_deflate.c>
AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Browser Caching
<IfModule mod_expires.c>
ExpiresActive On
ExpiresByType image/jpg "access plus 1 year"
ExpiresByType image/jpeg "access plus 1 year"
ExpiresByType image/gif "access plus 1 year"
ExpiresByType image/png "access plus 1 year"
ExpiresByType image/webp "access plus 1 year"
ExpiresByType image/svg+xml "access plus 1 year"
ExpiresByType text/css "access plus 1 month"
ExpiresByType application/pdf "access plus 1 month"
ExpiresByType application/javascript "access plus 1 month"
ExpiresByType application/x-javascript "access plus 1 month"
ExpiresByType text/javascript "access plus 1 month"
ExpiresByType image/x-icon "access plus 1 year"
ExpiresDefault "access plus 2 days"
</IfModule>

# Security Headers
<IfModule mod_headers.c>
# Content Security Policy - Allow necessary resources
Header set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://www.google.com https://www.gstatic.com https://ajax.googleapis.com https://cdn.prod.website-files.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self'; frame-src 'self' https://www.google.com; object-src 'none'; base-uri 'self'; form-action 'self';"

# Prevent MIME type sniffing
Header set X-Content-Type-Options "nosniff"

# Prevent clickjacking attacks
Header set X-Frame-Options "SAMEORIGIN"

# Enable XSS protection
Header set X-XSS-Protection "1; mode=block"

# Referrer policy for privacy
Header set Referrer-Policy "strict-origin-when-cross-origin"

# Permissions policy
Header set Permissions-Policy "geolocation=(), microphone=(), camera=()"
</IfModule>

# Custom Error Pages
ErrorDocument 404 /404.html
ErrorDocument 500 /500.html

# Prevent directory browsing
Options -Indexes

# Protect sensitive files
<FilesMatch "^\.">
Order allow,deny
Deny from all
</FilesMatch>
